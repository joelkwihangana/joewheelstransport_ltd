<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main><h2>Edit <%=products.title%></h2>
    <form class="product-form" action="/admin/edit-product" method="POST">
        <div class="form-control">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%=products.title%>">    
            </div>
            
            <div class="form-control"> 
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%=products.imageUrl%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<%=products.price%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description"   value="<%=products.description%>"></textarea>
            </div>
        </div>

        <button class="btn" type="submit">Save Changes</button>
    </form>
</main>
    <%- include('../includes/end.ejs') %>